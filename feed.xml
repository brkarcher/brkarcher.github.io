---
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>The Midnight Oil</title>
	<link href="http://themidnightoil.net/"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<author>
		<name>Ben K.</name>
	</author>
	<id>urn:uuid:f4116555-aa76-40fe-bbab-1f96b186e29e</id>

	{% assign pages = site.pages | where: "feed","true" | sort: "feed_date" | reverse %}
	{% for page in pages %}
		<entry>
			<title>{{ page.title }}</title>
			<link href="{{ page.url | absolute_url }}"/>
			<id>{{ page.url | absolute_url | xml_escape }}</id>
			<published>{{ page.feed_date | date_to_xmlschema }}</published>
			<updated>{{ page.feed_date | date_to_xmlschema }}</updated>
			<content type="html" xml:base="{{ page.url | absolute_url | xml_escape }}">{{ page.content | strip | xml_escape }}</content>
		</entry>{% endfor %}
</feed>
