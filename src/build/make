#/bin/bash

# run me from the root folder; I expect to work in a "src" folder and export to the current folder

for filename in src/*.md; do
	./src/build/process "$filename"
done

cp -r src/content/* ./

for filename in src/empire/*.md; do
	./src/build/process "$filename" empire
done

cp -r src/empire/content/* ./empire/

for filename in src/troubles/*.md; do
	./src/build/process "$filename" troubles
done

cp -r src/troubles/content/* ./troubles/

