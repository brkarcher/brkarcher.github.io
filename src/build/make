#/bin/bash

# run me from the root folder; I expect to work in a "source" folder and export to the current folder

for filename in source/*.md; do
	./process "$filename"
done

cp -r source/content/* ./

for filename in source/empire/*.md; do
	./process "$filename" empire
done

cp -r source/empire/content/* ./empire/

for filename in source/troubles/*.md; do
	./process "$filename" troubles
done

cp -r source/troubles/content/* ./troubles/

